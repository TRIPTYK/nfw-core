{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "strict": true,
    "moduleResolution": "node16",
    "module": "ES2022",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
