{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/**/node_modules", "node_modules", "dist/**/*"]
}
